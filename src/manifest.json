{
	"manifest_version": 2,
	"name": "Channel Blocker",
	"version": "2.0.0",

	"description": "Allows you to block YouTubeâ„¢ videos and comments by blacklisting users and/or by using regular expressions.",

	"icons": {
		"48": "/images/Ytc_icon_48.png",
		"96": "/images/Ytc_icon_96.png"
	},

	"permissions": [
		"storage",
		"unlimitedStorage",
		"tabs",
		"*://www.youtube.com/*"
	],

	"browser_action": {
		"default_title": "Configuration",
		"default_icon": {
			"16": "/images/Ytc_icon_16.png",
			"32": "/images/Ytc_icon_32.png"
		}
	},

	"options_page": "config/config.html",

	"background": {
		"scripts": [
			"polyfill/browser-polyfill.min.js",
			"shared/shared.js",
			"background/HashSet.js",
			"background/FilterStorageManager.js",
			"background/browser_action.js",
			"background/url_update.js",
			"background/config_storage.js",
			"background/filter_storage.js",
			"background/savefile_export.js"
		]
	},

	"content_scripts": [
		{
			"matches": ["*://www.youtube.com/*"],
			"js": [
				"polyfill/browser-polyfill.min.js",

				"shared/jquery-3.4.1.min.js",
				"shared/shared.js",
				"content/checker_module.js",
				"content/event_dispatcher.js",
				"content/button_lib.js",

				"content/Filter.js",

				"content/CallbackFilter.js",

				"content/start/StartCommantFilter.js",
				"content/start/StartContainerFilter.js",
				"content/start/StartContentFilter.js",
				"content/start/PrimaryFilter.js",
				"content/start/PersistentAppFilter.js",

				"content/search_page/SearchPageContentFilter.js",
				"content/search_page/SearchPageSectionFilter.js",
				"content/search_page/SearchPageItemSectionFilter.js",
				"content/search_page/SearchPageStartFilter.js",

				"content/video_page/VideoPageCommentRepliesFilter.js",
				"content/video_page/VideoPageCommentFilter.js",
				"content/video_page/VideoPageCommentListFilter.js",
				"content/video_page/VideoPageCommentContainerFilter.js",
				"content/video_page/EndscreenContentFilter.js",
				"content/video_page/VideoPageMetaContentsFilter.js",
				"content/video_page/VideoPageMetaFilter.js",
				"content/video_page/VideoPageContentFilter.js",
				"content/video_page/VideoPageWatchFilter.js",
				"content/video_page/VideoPageManagerFilter.js",
				"content/video_page/VideoPageAppFilter.js",

				"content/controller.js"
			]
		}
	],

	"web_accessible_resources": [
		"content/img/close.svg",
		"content/img/blockedVideo.svg"
	]
}
