{
	"manifest_version": 2,
	"name": "YT Cleaner",
	"version": "1.0",

	"description": "TODO",

	"applications": {
		"gecko": {
	    	"id": "yt-cleaner@test.com",
	    	"strict_min_version": "52.0"
	  	}
	},

	"permissions": [
		"storage",
		"unlimitedStorage",
		"tabs",
		"*://www.youtube.com/*"
	],

	"browser_action": {
		"default_title": "Configuration"
	},

	"options_ui": {
		"page": "config/config.html",
		"open_in_tab": true
	},

	"background": {
		"scripts": [
			"shared/shared.js",
			"background/HashSet.js",
			"background/StorageManager.js",
			"background/browser_action.js",
			"background/url_update.js",
			"background/storage.js"
		]
	},

	"content_scripts": [
		{
			"matches": ["*://www.youtube.com/*"],
			"js": ["shared/shared.js", "content/checker_module.js", "content/event_dispatcher.js", "content/button_lib.js", "content/Filter.js", "content/VideoContainerFilter.js", "content/StartContentFilter.js", "content/SearchPageContentFilter.js", "content/VideoPageCommentRepliesFilter.js", "content/VideoPageCommentFilter.js", "content/VideoPageCommentListFilter.js", "content/VideoPageCommentContainerFilter.js", "content/VideoPageContentFilter.js", "content/VideoPageWatchFilter.js", "content/VideoPageManagerFilter.js", "content/VideoPageAppFilter.js", "content/content_controller.js"]
		}
	]
}
